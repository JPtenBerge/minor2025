@using Insta.Shared.Entities

@if (Photo.PhotoData is not null && Photo.PhotoData.Length > 0)
{
    <img src="data:image/png;base64,@Convert.ToBase64String(Photo.PhotoData)"/>
}
else
{
    <p>(no img)</p>
}
<strong>@Photo.Title</strong>
<p>@Photo.Description</p>
@if (WithDetailsLink)
{
    <a href="/photo/@Photo.Id">view details</a>
}

@code {
    [Parameter] public Photo Photo { get; set; } = null!;
    [Parameter] public bool WithDetailsLink { get; set; }
}

<style>
    img {
        display: block;
    }
</style>